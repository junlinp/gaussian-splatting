{
    "name": "gaussian_splatting-dev",
    "build": {
        "dockerfile": "../Dockerfile",
        "context": ".."
    },
    "context": "..",
  
    "containerEnv": {
      "DISPLAY": "${localEnv:DISPLAY}",
      "GDK_SCALE": "2",
    },
  
    "runArgs": [
      "--gpus", "all",
      "--privileged",
      "--network", "host",
      "-v", "/tmp/.X11-unix:/tmp/.X11-unix",
      "-v", "/dev:/dev",
      "-v", "/etc/localtime:/etc/localtime",
      "--device-cgroup-rule=c 81:* rwm",
      "--device-cgroup-rule=c 234:* rwm",
      "--shm-size=16gb",
      "-v", "${localWorkspaceFolder}:/gaussian_splatting"
    ],
  
    "workspaceFolder": "/gaussian_splatting",
    "remoteUser": "root",
    "features": {},
    "mounts": [],
    "postCreateCommand": "echo 'Devcontainer ready.'"
  }
  
  